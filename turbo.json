{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", "**/.env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "env": [
        "NODE_ENV",
        "PLASMIC_PROJECT_ID",
        "PLASMIC_PROJECT_API_TOKEN",
        "NEXT_PUBLIC_DOMAIN",
        "NEXT_PUBLIC_DB_GRAPHQL_URL",
        "OSO_API_KEY",
        "NEXT_PUBLIC_ALGOLIA_APPLICATION_ID",
        "NEXT_PUBLIC_ALGOLIA_API_KEY",
        "NEXT_PUBLIC_ALGOLIA_INDEX",
        "NEXT_PUBLIC_FEEDBACK_FARM_ID",
        "DOCS_URL",
        "DOCS_ALGOLIA_APP_ID",
        "DOCS_ALGOLIA_API_KEY",
        "DOCS_ALGOLIA_INDEX",
        "DOCS_SEGMENT_WRITE_KEY",
        "DBT_TARGET"
      ],
      "inputs": ["$TURBO_DEFAULT$", ".env", ".env.local"],
      "outputs": ["build/**", "dist/**", "out/**", ".next/**", ".docusaurus"]
    },
    "deploy": {
      "dependsOn": ["build"],
      "inputs": ["$TURBO_DEFAULT$", ".env", ".env.local"],
      "outputs": ["build/**", "dist/**", "out/**", ".next/**", ".docusaurus"]
    },
    "dev": {
      "persistent": true
    },
    "lint": {},
    "sentry:sourcemaps": {},
    "start": {
      "cache": false
    },
    "test": {},
    "@opensource-observer/frontend#build": {
      "cache": false
    }
  }
}
